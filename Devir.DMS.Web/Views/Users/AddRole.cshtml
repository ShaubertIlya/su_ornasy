@model Devir.DMS.DL.Models.References.OrganizationStructure.Role
@{
    ViewBag.Title = "Роль";
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="addModalLabel">Роль</h3>
</div>
<div class="modal-body" id="addModalBody" style="width: 500px;">

    @using (Ajax.BeginForm((bool)ViewBag.isForUpdate == false ? "AddRole" : "EditRole", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "addModal" }))
    {
        @Html.ValidationSummary(true)


        <div class="editor-label">
            Название
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <p>
            <input type="submit" value="Сохранить" />
            <input type="button" value="Отмена" onclick="$('#addModal').modal('hide');" />
        </p>
       
    }
</div>
