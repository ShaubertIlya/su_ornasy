@model  Devir.DMS.DL.Models.FileStorage.MimeType

@{
    Layout = null;
}

<link href="~/Content/bootstrap/bootstrap-fileupload.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap/bootstrap-fileupload.min.js"></script>

<script>

    $('#uploadForm').ajaxForm({
        success: function (data) {
            $('#image').append("<img width=100 height=100 src='/File/GetScanedImage?guid=" + $.trim(data) + "'>");

            $("#dlgIconUpload").modal('hide');
            
        }
    });

</script>




<div>
    <form id="uploadForm" action="/File/UploadIcon" method="post" enctype="multipart/form-data">
        Введите тип файла(mime type):
        @*(http://filext.com/faq/office_mime_types.php)*@
         <br/>
        @Html.TextBoxFor(m => m.Name)

        <br/>
        Комментарий:
        <br/>
        @Html.TextAreaFor(m=>m.Comment)

        <br/>
        Выберите иконку:
        <br/>
       @* <input type="file" name="imageIn" />*@
        
        <div class="fileupload fileupload-new" data-provides="fileupload">
            <span class="btn btn-file"><span class="fileupload-new">Обзор</span><span class="fileupload-exists">Change</span>
                <input type="file" name="imageIn" title="Обзор" /></span>
            <span class="fileupload-preview"></span>
            <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">×</a>
        </div>

        @*<input type="submit" value="Ok" class="btn btn-primary" />*@
    </form>
</div>