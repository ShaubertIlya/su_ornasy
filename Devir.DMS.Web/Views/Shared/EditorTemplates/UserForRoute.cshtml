@model Devir.DMS.DL.Models.Document.StorageTypes.UserForRoute

 @*@Html.HiddenFor(m=>m.UserId)*@
@* Логика справочника пользователей, ГУИД ложим в Hiddenfor(m.UserId)*@
@*@Html.EditorFor(m=>m.DateBeforeSign)*@

 <div id="negotiationUser" class="row span8">
    @*ФИО*@
    <div class="span3">
        <div class="input-append">
            <input class="span2" id="appendedInputButton_@Model" type="text" value="@Model.User.Name">
            @* @Html.Hidden("DynamicReferenceId", Model)*@
            <input type="hidden" value="@Model." name="@Model.User.Name" id="@Model.User.UserId">
            <button id="btn_@Model."  role="button" class="btn" data-toggle="modal">...</button>
        </div>
    </div>
    @*Дата*@
    <div class="span2">
        <div class="input-append date dp" id="dp" data-date="01-01-2013" data-date-format="dd-mm-yyyy">
            @Html.TextBoxFor(m=>m.DateBeforeSign)  @* <input class="span2" size="16" type="text" name="@Model.DateBeforeSign" value="@Model.DateBeforeSign">*@
            <span class="add-on"><i class="icon-calendar"></i></span>
        </div>
    </div>
    @*Обязательное*@
        <div class="span1">
            @Html.EditorFor(m => m.IsMustSign)
        </div>
    @*Порядок*@
        <div class="span2">
            @Html.EditorFor(m=>m.Order)
            <div class="btn-group"><a id="up" class="btn" href="#"><i class="icon-arrow-up"></i></a><a id="down" class="btn" href="#"><i class="icon-arrow-down"></i></a></div>
            <a class="btn" href="#" id="remNegotiator"><i class="icon-trash"></i></a>
        </div>
</div>