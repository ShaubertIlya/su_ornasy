                //scroll:1,
                //rowList: [10, 30],
                //height: 50,
                width:760,
                hidegrid: false,
                //pager: pager,
                sortname: 'Id',
                viewrecords: true,
                sortorder: "desc",
                caption: tableName,
                mtype: "POST",
                ondblClickRow: function(id) {
