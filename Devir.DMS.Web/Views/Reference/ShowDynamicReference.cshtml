                    $('#' + dynRefname).val(dataid);
                
                    CloseRefModal();
                    //$("#addModal_" + ModalDivId).modal('hide');
                    //$("#addModal_" + ModalDivId).empty();
                },
            });
      
            AddButton(list, addData, updateData, deleteData, buttonsDiv, ModalDivId, viewBagAddModal);
        }


        $(function () {
            $('div.split-pane').splitPane();
        });

</script>


