@model Devir.DMS.DL.Models.Document.DocumentType

@{
ViewBag.Title = "FieldTemplates";
Layout = null;
}
<script>
    $("#edit").click(function () {
        $("#edit-modal").modal('show');
    });
</script>
<hr/>
Наименование : @Model.Name
<br/>
Поля документа: @Model.Comment
@foreach (var item in Model.FieldTemplates)
{
    <div>@item.Id</div>
    <div>@item.Header</div>
    <div>@item.FieldType</div>
    <div>@item.FieldOrder</div>
}
<br/>
<button id='edit' class="btn btn-primary" type="button">Редактировать</button>

<div id="edit-modal" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
</div>            
</div>