@model Devir.DMS.DL.Models.References.DynamicReferences.DynamicReference

@{
ViewBag.Title = "";
Layout = null;
}
<script>
    $(".edit").click(function () {
        $("#addModal").empty();
        $("#addModal").modal('show');
        var id = $(".edit").attr("value");
        $("#addModal").load(this.id +"?id=" + id);
    });
    $('#tab-detail a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    });
</script>
<div class="gridDetailHeader">
            @Model.Name
    </div>
<div class="tab-pane" id="gridDetails">
        <ul class="nav nav-tabs" id="tab-detail">
        <li class="active">
            <a href="#collapseOne">Поля документа</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="collapseOne">
            <button id='EditDynamicFieldsTemplate' class="btn edit" value="@Model.Id" type="button">
                <i class="icon-pencil icon-black"></i>
            </button>
            <table  class="table table-hover table-bordered table-condensed">
                <tr>
                    <th>Главное</th>
                    <th>Заголовок</th>
                    <th>Тип поле</th>
                    <th>Обязательное</th>
                    <th>Тип поле</th>
                </tr>
                <tbody>
                    @foreach (var item in Model.FieldTemplates)
                    {
                        <tr>
                            <td>@item.isDisplay</td>
                            <td>@item.Header</td>
                            <td>@item.TypeOfTheField.Name</td>
                            <td>@item.isRequired</td>
                            <td>@(item.FieldOrder+1)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <br/>
            @*<button id='EditDynamicFieldsTemplate' class="btn btn-primary edit" value="@Model.Id" type="button">Редактировать</button>*@ 
        </div>
    </div>
